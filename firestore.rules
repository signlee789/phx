rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role from the auth token
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId;
      allow create, update, delete: if isAdmin();

      // Rules for the 'referredUsers' subcollection
      match /referredUsers/{referredUserId} {
        allow read: if request.auth.uid == userId || isAdmin();
        allow write: if false;
      }
    }
    
    // Rules for the 'announcements' collection
    match /announcements/{announcementId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // Rules for the 'graph_data' collection
    match /graph_data/{dataId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    // Rules for the 'withdrawals' collection
    match /withdrawals/{withdrawalId} {
      // A user can GET their own individual withdrawal document.
      allow get: if request.auth.uid == resource.data.uid;
      // An admin can GET any individual withdrawal document and LIST the entire collection.
      allow get, list: if isAdmin();
      // Direct writes are disabled.
      allow write: if false;
    }

    // Rules for 'governance' data like the leaderboard
    match /governance/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Rules for the 'proposals' collection
    match /proposals/{proposalId} {
      allow read: if true; // Allow public read access to all proposals
      allow write: if false;

      match /voters/{voterId} {
        allow read: if request.auth != null;
        allow write: if false;
      }
    }

    // Rules for the 'treasuryProposals' collection
    match /treasuryProposals/{proposalId} {
      allow read: if true; // Allow public read access to all treasury proposals
      allow write: if false;
    }

        // Rules for the 'communityPosts' collection
    match /communityPosts/{postId} {
      // Allow any authenticated (logged-in) user to read posts.
      allow read: if request.auth != null;

      // Allow users to create posts ONLY if their KYC is verified.
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.kycStatus == 'verified';

      // Disallow updating or deleting posts from the client-side for security.
      allow update, delete: if false;

            // Rules for the 'comments' subcollection
      match /comments/{commentId} {
        // Allow any authenticated user to read comments.
        allow read: if request.auth != null;
        
        // Allow users to create comments if they are KYC verified and have a wallet.
        allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.kycStatus == 'verified';

        // Disallow updating or deleting comments from the client-side.
        allow update, delete: if false;
      }

    }



  }
}
